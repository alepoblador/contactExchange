<% provide(:title, "Sign in") %>
<h2>Sign in</h2>

	<%= form_for(:session, url: sessions_path) do |f| %>
		<div>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<div>
			<%= f.submit "Sign in", class: "btn btn-primary" %>
		</div>

	<% end %>

	<p>New user? <%= link_to "Sign up now!", signup_path %></p>